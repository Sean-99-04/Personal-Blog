    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required="true" placeholder="email..." autocomplete="off" 
    pattern="[^@ \t\r\n]+@[^@ \t\r\n]+\.[^@ \t\r\n]+" 
    value="s@s.com"  />
    <span></span>
  </div>
  <div class="form-2__group">
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required="true" placeholder="password..." minlength="8" maxlength="20" value="cHkaiVa7"/>
    <span></span>
  </div>
  <div class="form-2__group">
    <input type="submit" value="Login" />
  </div>
</form>

